<h1 class="text-3xl font-bold underline">GitHub Repositories</h1>

<ul>
  <% @repos.each do |repo| %>
    <p>
    Repo: <%= repo.name %>
    </p>
    <p>
      Language: <%= repo.language %>
    </p>
    <p>
      Description: <%= repo.description %>
    </p>
    <p>
      Created on: <%= repo.created_at.in_time_zone("Australia/Sydney").strftime("%A, %d %B %Y %Z") %>
    </p>
     <p>
      Last updated on: <%= repo.updated_at.in_time_zone("Australia/Sydney").strftime("%A, %d %B %Y %Z") %>
    </p>
    <hr>
  <% end %>
</ul>
