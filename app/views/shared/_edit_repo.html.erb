<%= form_for @repository, url: repository_path(@repository), method: :patch do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <%= form.submit "Update Repo", class: "btn btn-primary" %>
<% end %>
